<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_help_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.umbc.cs.iot.clients.android.ui.activities.HelpFeedbackActivity"
    tools:showIn="@layout/activity_help_feedback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <android.support.v7.widget.CardView
            android:id="@+id/helpTextCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_alignParentTop="true"
            android:elevation="@dimen/fab_margin" >
            <TextView
                android:text="@string/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/helpTextTextView" />

        </android.support.v7.widget.CardView>

        <!--<View-->
            <!--android:id="@+id/divider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_below="@+id/helpTextCardView"-->
            <!--android:background="@color/colorPrimaryDark"/>-->

        <android.support.v7.widget.CardView
            android:id="@+id/feedbackTextCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_below="@+id/helpTextCardView"
            android:elevation="@dimen/fab_margin" >
            <TextView
                android:text="@string/feedback_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/feedbackHintTextView" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
