<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.umbc.cs.iot.clients.android.ui.fragments.QueryFragment"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scrollViewForDisplayText"
        android:layout_above="@+id/userQueryEditText"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<HorizontalScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent">-->

        <!-- Main content here -->
        <TextView
            android:id="@+id/defaultDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:text="@string/defaultDisplayText" />

        <!--</HorizontalScrollView>-->
    </ScrollView>

    <EditText
        android:id="@+id/userQueryEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:imeOptions="actionSend"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/queryHint"
        android:inputType="textCapSentences|textImeMultiLine"
        android:layout_toStartOf="@+id/sendQueryToServerImageButton"
        android:textSize="20sp"
        android:selectAllOnFocus="true" />

    <ImageButton
        android:id="@+id/sendQueryToServerImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:contentDescription="@string/sendQueryToServerImageButtonContentDescriptionText"
        android:backgroundTint="@color/colorAccent"
        android:elevation="24dp" />

</RelativeLayout>